<?xml version="1.0" encoding="UTF-8"?>
<window>
	<allowoverlay>no</allowoverlay>
	<defaultcontrol always="false">101</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="group">
			<control type="label">
				<font>regular_20</font>
				<label>$ADDON[script.cu.lrclyrics 32199]</label>
				<visible>false</visible>
			</control>
			<control type="image">
				<width>screen_Width</width>
				<height>545</height>
				<texture>white.png</texture>
				<colordiffuse>base3_cc</colordiffuse>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
			<control type="list" id="110">
				<left>60</left>
				<top>70</top>
				<width>1200</width>
				<height>400</height>
				<onleft>dialog.close(all,true)</onleft>
				<onright>dialog.close(all,true)</onright>
				<onup>110</onup>
				<ondown>110</ondown>
				<scrolltime>200</scrolltime>
				<itemlayout height="40">
					<control type="label">
						<left>0</left>
						<width>1200</width>
						<label fallback="">$INFO[ListItem.Label]</label>
						<font>semibold_25</font>
						<textcolor>Color2</textcolor>
						<wrapmultiline>true</wrapmultiline>
					</control>
				</itemlayout>
				<focusedlayout height="40">
					<control type="label">
						<left>0</left>
						<width>1200</width>
						<label fallback="">$INFO[ListItem.Label]</label>
						<font>semibold_35</font>
						<textcolor>Color1</textcolor>
						<wrapmultiline>true</wrapmultiline>
					</control>
				</focusedlayout>
			</control>
			<!--next page-->
			<control type="spincontrol" id="111">
				<subtype>page</subtype>
				<showonepage>true</showonepage>
				<!--<visible>Control.IsVisible(110)</visible>-->
				<visible>false</visible>
			</control>
			<!--pick label-->
			<control type="label" id="2">
				<width>550</width>
				<height>30</height>
				<align>left</align>
				<label>31203</label>
				<font>regular_20</font>
				<textcolor>Color2</textcolor>
				<visible>Control.IsVisible(120) + ![Control.IsVisible(100) | Control.IsVisible(110)]</visible>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) -->
			<control type="list" id="120">
				<width>550</width>
				<height>440</height>
				<onleft>121</onleft>
				<onright>121</onright>
				<onup>120</onup>
				<ondown>120</ondown>
				<pagecontrol>121</pagecontrol>
				<include>global_ListScroll</include>
				<animation effect="slide" start="0,0" end="20,0" time="0" condition="!Control.IsVisible(121)">Conditional</animation>
				<itemlayout height="40">
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>530</width>
						<height>40</height>
						<font>regular_20</font>
						<aligny>center</aligny>
						<selectedcolor>Selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="40">
					<control type="image">
						<width>550</width>
						<height>41</height>
						<visible>Control.HasFocus(120)</visible>
						<texture border="5">white.png</texture>
					</control>
					<control type="label">
						<width>530</width>
						<height>40</height>
						<font>regular_20</font>
						<selectedcolor>Selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</focusedlayout>
			</control>
			<!--next page-->
			<control type="spincontrol" id="121">
				<subtype>page</subtype>
				<font>regular_20</font>
				<onleft>120</onleft>
				<onright>120</onright>
				<ondown>120</ondown>
				<onup>120</onup>
				<showonepage>true</showonepage>
				<visible>false</visible>
				<visible>Control.IsVisible(120)</visible>
			</control>
			<!--scraper label-->
			<control type="label" id="200">
				<visible>false</visible>
			</control>
		</control>
	</controls>
</window>