<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>8</defaultcontrol>
	<controls>
		<control type="videowindow" id="20">
			<include>screen_Dimensions</include>
			<visible>Player.HasVideo</visible>
		</control>
		<!--overlay-->
		<control type="image">
			<include>screen_Dimensions</include>
			<texture>black.png</texture>
		</control>
		<!--top left mover-->
		<control type="mover" id="8">
			<width>128</width>
			<height>128</height>
			<texturenofocus>calibration/TopLeft-focus.png</texturenofocus>
			<texturefocus colordiffuse="Color8">calibration/TopLeft-focus.png</texturefocus>
		</control>
		<!--right bottom mover-->
		<control type="mover" id="9">
			<left>700</left>
			<top>500</top>
			<width>128</width>
			<height>128</height>
			<texturenofocus>calibration/BottomRight-focus.png</texturenofocus>
			<texturefocus colordiffuse="Color8">calibration/BottomRight-focus.png</texturefocus>
		</control>
		<!--subtitle position mover-->
		<control type="mover" id="10">
			<left>200</left>
			<top>500</top>
			<width>512</width>
			<height>128</height>
			<texturenofocus>calibration/Subtitles-focus.png</texturenofocus>
			<texturefocus colordiffuse="Color8">calibration/Subtitles-focus.png</texturefocus>
		</control>
		<!--pixel aspect ratio box-->
		<control type="resize" id="11">
			<top>232</top>
			<width>256</width>
			<height>256</height>
			<texturenofocus>calibration/PixelRatio-focus.png</texturenofocus>
			<texturefocus colordiffuse="Color8">calibration/PixelRatio-focus.png</texturefocus>
		</control>
		<control type="group">
			<left>20</left>
			<top>80</top>
			<!--coordinates label-->
			<control type="label" id="2">
				<top>10</top>
				<width>1240</width>
				<label>-</label>
				<font>semibold_20-U</font>
				<align>center</align>
			</control>
			<!--help information-->
			<control type="label" id="3">
				<top>40</top>
				<width>1240</width>
				<label>-</label>
				<font>regular_20</font>
				<align>center</align>
			</control>
		</control>
	</controls>
</window>